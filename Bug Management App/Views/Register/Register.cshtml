@model Bug_Management_App.Models.User
@{
    ViewData["Title"] = "Login";
  

}
<link rel="stylesheet" href="~/css/sLogin.css" />

<div class="login-wrap">
    <div class="login-html">
        <div class="a">
            <h1 class="title">B U G  - M A N A G E M E N T</h1>
        </div>
        <hr class="titleLine" align="center" size=10 noshade ;>
        <hr>
        <input id="tab-2" type="radio" name="tab" class="sign-up"><label for="tab-2" class="tab">Registrarse</label>
        <div class="login-form">
            <form asp-controller="Register" asp-action="Register" method="post">
                <div class="sign-up-htm">
                    <div class="group">
                        <label asp-for="Name" class="label">Nombres(s)</label>
                        <input asp-for="Name" id="" type="text" class="input" required>
                    </div>
                    <div class="group">
                        <label asp-for="LastName" class="label">Apellidos</label>
                        <input asp-for="LastName" type="text" class="input" required>
                    </div>
                    <div class="group">
                        <label asp-for="UserName" class="label">Nombre de usuario</label>
                        <input asp-for="UserName" type="text" class="input" minlength="3" maxlength="30" required>
                    </div>
                    <div class="group">
                        <label asp-for="Email" class="label">Correo electronico</label>
                        <input asp-for="Email" type="email" class="input" required>
                    </div>
                    <div class="group">
                        <label asp-for="Password" class="label">Contraseña</label>
                        <input asp-for="Password" type="password" class="input" data-type="password" required>
                    </div>
                    <div class="group">
                        <input type="submit" class="button" value="Registrarse">
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>