@model IEnumerable<Bug_Management_App.Models.Bugs>
@{
    ViewBag.Title = "BugsIndex";
}
<!----Filtros-->
<div>
    <ul class="nav filters-style nav-pills ">
        <li class="nav-item">
            <a class="nav-link">Todos</a>
        </li>
    </ul>
</div>

<div class="container-style container">
    <div class="scrollbar">
        <div class="row projects-dashboard">
            @if (Model.Any())
            {
                foreach (var item in Model.Select((value, index) => new { value, index }))
                {
                    <div class="bugs-column">
                        <a class="link-style" href="@Url.Action("ViewG", "Projects")">
                            <div class="card">
                                <div class="row">
                                    <h3>@item.value.Title</h3>
                                </div>
                                <div class="row">
                                    <p class="col-sm-3">@item.value.OperatingSystem</p>
                                    <p class="col-sm-3">@item.value.OSVersion</p>
                                    <p class="col-sm-3">@item.value.AppVersion</p>
                                    <p class="col-sm-3">@item.value.Status</p>
                                </div>
                            </div>
                        </a>
                    </div>
                }
            }
            else
            {
                <div class="bugs-column">
                    <a class="link-style" href="@Url.Action("CreateBug", "Bugs", new {projectId = ViewBag.projectId })">
                        <div class="card alert alert-danger">
                            <div class="row">
                                <div class="title-text">No hay bugs reportados!</div>
                            </div>
                        </div>
                    </a>
                </div>
            }
        </div>
    </div>
    <a class="float" href="@Url.Action("CreateBug", "Bugs", new {projectId = ViewBag.projectId })"><p class="plus">+</p></a>

</div>

