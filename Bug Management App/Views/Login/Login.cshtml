@model Bug_Management_App.Dtos.LoginUserDto
@{
    ViewBag.Title = "Iniciar sesión";
}
<link rel="stylesheet" href="~/Content/loginStyle.css" />
<div class="container">
    <div class="row">
        <div class="col-md-3"></div>
        <div class="login-wrap col-md-6">
            <div class="login-html">
                <div class="a">
                    <h1 class="title">B U G  - M A N A G E M E N T</h1>
                </div>
                <hr />
                <input id="tab-1" type="radio" name="tab" class="sign-in" checked><label for="tab-1" class="tab">Iniciar Sesión</label>
                <div class="login-form form-horizontal">
                    @using (Html.BeginForm("Login", "Login", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "login-form form-horizontal", role = "form" }))
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="form-group group">
                            @Html.LabelFor(m => m.UserName, new { @class = "login-label col-md-2" })
                            <div class="col-md-12">
                                @Html.TextBoxFor(m => m.UserName, new { @class = "input" })
                                @Html.ValidationMessageFor(m => m.UserName, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group group">
                            @Html.LabelFor(m => m.Password, new { @class = "login-label col-md-2" })
                            <div class="col-md-12">
                                @Html.PasswordFor(m => m.Password, new { @class = "input" })
                                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group group">
                            <div class="login-label col-md-12">
                                <input type="submit" value="Iniciar sesión" class="button" />
                            </div>
                        </div>
                        <p>
                            @Html.ActionLink("Registrarse como usuario nuevo", "Register", "Register")
                        </p>
                        @* Habilite esta opción una vez tenga la confirmación de la cuenta habilitada para la funcionalidad de restablecimiento de contraseña
                <p>
                    @Html.ActionLink("¿Ha olvidado su contraseña?", "ForgotPassword")
                </p>*@
                    }
                    </div>
            </div>
        </div>
        <div class="col-md-3"></div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}