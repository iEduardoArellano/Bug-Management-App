@model IEnumerable<Bug_Management_App.Dtos.UsersListForTeamsDto>

@{
    ViewBag.Title = "Team";
}

<div class="container-fluid">
    <div class="title-text">Teams</div>
</div>
<div class="container-team container"> 
    <div class="scrollbar-team">
        <div class="row projects-dashboard">
            <div class="table-responsive">
                <table class="table table-striped table-bordered">
                    <thead style="background-color:#494949 ; color: #ffffff" >
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Name)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.LastName)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Role)
                            </th>
                        </tr>
                    </thead>

                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.LastName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Role)
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
        <a class="float" href="@Url.Action("UsersForTeams", "Projects", new {projectId = ViewBag.projectId })"><p class="plus">+</p></a>
    </div>
</div>

<div class="container-fluid">
    <a href="@Url.Action("Index", "Projects")"><p>Back</p></a>
</div>
        
          

           
