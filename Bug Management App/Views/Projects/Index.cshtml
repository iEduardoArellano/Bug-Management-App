@model IEnumerable<Bug_Management_App.Models.Projects>
@{
    ViewBag.Title = "Index";
}


<ul class="nav nav-tabs  ">
    <li class="nav-item">
        <a class="nav-link" href="#">Filtro</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" href="#">Filtro2</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" href="#">Filtro</a>
    </li>
    <li class="nav-item navbar-right ">
        @Html.ActionLink("Agregrar proyecto", "Create", "Projects")
    </li>
</ul>
<div class ="container">
    
    <table class="table table-hover">
        <thead class="thead-style">
            <tr>
                <td>Compañia</td>
                <td>Logo</td>
                <td>Project Manager</td>
                <td>Status</td>
            </tr>
        </thead>
       

        @foreach (var item in Model.Select((value, index) => new { value, index }))
        {
    <tbody>
        <tr>
        
            <td>@item.value.CompanyName</td>
        
            <td><img src="@ViewBag.ImagesData[item.index]" width="50" height="50" /></td>
        
            <td>@item.value.ProjectManager</td>
        
            <td>@item.value.Status</td>
            <td> @Html.ActionLink("Editar proyecto", "SendToEdit", "Projects", new { projectId = item.value.ProjectId }, null)</td>
        
        </tr>

    </tbody>
           
        }
    </table>
</div>





