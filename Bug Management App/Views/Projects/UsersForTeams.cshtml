@model IEnumerable<Bug_Management_App.Dtos.UsersListForTeamsDto>

@{
    ViewBag.Title = "Teams";
}


<div class="container-fluid">
    <div class="title-text">Teams</div>
</div>
<div class="container-team container">
    <div class="scrollbar-team">
        <div class="row projects-dashboard">
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Name)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.LastName)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Role)
                            </th>
                            <th></th>
                        </tr>
                    </thead>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.LastName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Role)
                            </td>
                            <td>
                                @Html.ActionLink("Agregar al proyecto", "SetUserToProject", "Projects", new { userId = item.Id, projectId = ViewBag.projectId }, null)
                            </td>
                        </tr>
                    }

                </table>
            </div>
        </div>
    </div>
</div>
<div class="container-fluid">
    <a href="@Url.Action("Team", "Projects", new {projectId = ViewBag.projectId })"><p>Back</p></a>
</div>
